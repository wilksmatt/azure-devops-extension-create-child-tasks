    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ES2019"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist"
  },
  "include": [
    "scripts/**/*.ts"
  ]
}
